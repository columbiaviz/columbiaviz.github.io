---
const {title, subtitle} = Astro.props
---

<div id="banner">
    <canvas/>
    <canvas/>
    <canvas/>
    <canvas/>
</div>

<h1>{title}</h1>
<h2>{subtitle}</h2>
<slot />

<style>
    #banner{
        display: flex;
        justify-content: space-between;
        margin: 50px 0;
    }

    #banner canvas{
        width: 200px;
        height: 200px;
    }


    @media (max-width: 840px){
        #banner canvas:nth-child(4){ display:none; }
    }

    @media (max-width: 640px){
        #banner canvas{ width: 30vw; height: 30vw; }
        #banner{ margin: 15px 0; }
    }

    h1{
        margin:1em 0 0 0;
    }
    h2{
        font:18px "Jost", sans-serif;
        margin:0 0 1em 0;
    }
</style>

<script>
    import banner from '../scripts/banner.mjs'
    banner('#banner')
</script>